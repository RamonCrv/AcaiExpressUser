<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gs.myapplication.userConfig2"
    android:background="@drawable/fundoapp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/config_conta"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@mipmap/logosemfundo"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

            <Button
                android:id="@+id/tbEdit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="start|center"
                android:layout_marginStart="260dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/btn1"
                android:drawableStart="@drawable/edite"
                android:stateListAnimator="@drawable/btn1"
                android:text="@string/editi"
                android:textColor="#FFFFFF">

            </Button>

            <EditText
                android:id="@+id/nomeUserConf"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:hint="@string/Text_user_name"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btSalvar"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/texts"
                android:text="@string/salvar_atualizar"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btcancelar"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn1"
                android:text="@string/sair"
                android:textSize="20sp">

            </Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>