<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fundoapp2"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".InfoPonto">


    <TextView
        android:id="@+id/PontNomeXML"
        android:layout_width="415dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ImgPt"
        android:layout_width="422dp"
        android:layout_height="288dp"
        android:layout_marginTop="76dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/StatusXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/precoXML"
        android:layout_width="191dp"
        android:layout_height="37dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ImgPt"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/ImgPt"
        app:layout_constraintTop_toTopOf="@+id/ImgPt"
        app:layout_constraintVertical_bias="0.439" />

    <Button
        android:id="@+id/ButtVoltarXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn1"
        android:text="Voltar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button20"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/button20"
        app:layout_constraintTop_toBottomOf="@+id/StatusXML"
        app:layout_constraintVertical_bias="0.896" />

    <Button
        android:id="@+id/button2"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/btn1"
        android:text="Falar com Vendedor"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/precoXML"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/precoXML"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />

    <Button
        android:id="@+id/button20"
        android:layout_width="124dp"
        android:layout_height="38dp"
        android:background="@drawable/btn1"
        android:text="Avaliar Local"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ButtVoltarXML"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/StatusXML"
        app:layout_constraintVertical_bias="0.484" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="72dp"
        android:layout_height="73dp"
        android:layout_marginTop="244dp"
        android:src="@color/color3"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/precoXML"
        app:layout_constraintEnd_toEndOf="@+id/ImgPt"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="@+id/ImgPt"
        app:layout_constraintTop_toBottomOf="@+id/PontNomeXML"
        app:layout_constraintVertical_bias="0.394" />

    <ImageButton
        android:id="@+id/btnestar"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:background="@drawable/estrelaoff"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView"
        app:layout_constraintStart_toStartOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/circleImageView"
        app:layout_constraintVertical_bias="0.514"
        tools:srcCompat="@drawable/favorito"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>
