<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gs.myapplication.userConfig2"
    android:background="@drawable/fundoapp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/config_conta"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/logosemfundo"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <Button
        android:id="@+id/tbEdit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="start|center"
        android:layout_marginStart="280dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/btn1"
        android:drawableStart="@drawable/edite"
        android:stateListAnimator="@drawable/btn1"
        android:text="@string/editi"
        android:textColor="#FFFFFF">

    </Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="396dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nomeUserConf"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:drawableLeft="@drawable/edite"
                android:gravity="center"
                android:hint="@string/Text_user_name"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#90FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btSalvar"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:background="@drawable/texts"
                android:text="@string/salvar_atualizar"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btcancelar"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn1"
                android:text="Cancelar"
                android:textColor="#8A0000"
                android:textColorHint="#009E0101"
                android:textSize="20sp">

            </Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>







